@model ApplicationUser

<h2>User Profile</h2>

<div>
    <img src="/@Model.ProfilePhotoPath" alt="Profile Photo" style="width:150px;height:150px;border-radius:50%;" />
</div>

<form asp-action="ChangeProfilePhoto" method="post" enctype="multipart/form-data">
    <div>
        <label for="newProfilePhoto">Change Profile Photo:</label>
        <input type="file" name="newProfilePhoto" id="newProfilePhoto" accept="image/*" />
    </div>
    <button type="submit">Upload</button>
</form>