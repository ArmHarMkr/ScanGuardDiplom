@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - ScanGuard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/authPages.css">
    <style>
        /* Специфичные стили только для этой страницы */
        .status-message {
            padding: 1rem;
            margin: 1.5rem 0;
            border-radius: 8px;
            font-weight: 500;
            line-height: 1.6;
            background-color: rgba(255, 255, 255, 0.05);
        }

            .status-message.success {
                color: var(--success-color);
                border-left: 4px solid var(--success-color);
            }

            .status-message.error {
                color: var(--accent-color);
                border-left: 4px solid var(--accent-color);
            }

        .success-icon {
            font-size: 4rem;
            color: var(--success-color);
            margin-bottom: 1.5rem;
            animation: bounce 1s;
        }

        .btn-login {
            display: inline-block;
            background: var(--primary-color);
            color: white;
            padding: 0.8rem 2rem;
            border-radius: 30px;
            text-decoration: none;
            font-weight: 600;
            margin: 1.5rem 0;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(43, 45, 66, 0.3);
            border: none;
            cursor: pointer;
            font-size: 1rem;
            width: 100%;
            max-width: 250px;
        }

            .btn-login:hover {
                background: #1a1a2e;
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(43, 45, 66, 0.4);
            }

        .security-badge {
            margin-top: 2rem;
            padding: 0.5rem 1rem;
            background: rgba(75, 181, 67, 0.1);
            border-radius: 20px;
            display: inline-flex;
            align-items: center;
            color: var(--success-color);
            font-size: 0.8rem;
        }

            .security-badge i {
                margin-right: 0.5rem;
            }
    </style>
</head>
<body>
    <div class="confirm-container">
        <div class="form-container">
            @if (!Model.StatusMessage.Contains("Error"))
            {
                <div class="success-icon">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <h2 class="title">Email Confirmed!</h2>
                <div class="status-message success">
                    <i class="fas fa-check-circle"></i> @Model.StatusMessage
                </div>
                <div class="security-badge">
                    <i class="fas fa-lock"></i> Account Secured
                </div>
                <a href="/Identity/Account/Login" class="btn-login">
                    <i class="fas fa-sign-in-alt"></i> Continue to Login
                </a>
            }
            else
            {
                <h2 class="title">Confirmation Error</h2>
                <div class="status-message error">
                    <i class="fas fa-exclamation-circle"></i> @Model.StatusMessage
                </div>
                <a href="/" class="btn-login">
                    <i class="fas fa-home"></i> Return to Home
                </a>
            }
            <div class="slogan">Your first line of defense in the digital world</div>
        </div>
    </div>
</body>
</html>