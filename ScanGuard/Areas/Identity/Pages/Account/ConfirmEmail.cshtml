@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = ScanGuard.Resources.Resources.ConfirmEmail_Title;
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ScanGuard.Resources.Resources.ConfirmEmail_Title - ScanGuard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/authPages.css">
    <link rel="stylesheet" href="~/css/main.css">
    <style>
        /* Добавляем success-color, если его нет в authPages.css */
        :root {
            --success-color: #4BB543; /* Зеленый для успеха */
        }

        /* Иконка */
        .success-icon {
            font-size: 3.5rem;
            color: var(--success-color);
            margin-bottom: 1.5rem;
            animation: bounce 1s;
            display: block;
            text-align: center;
        }

        /* Анимация bounce */
        @@keyframes bounce {
            0%, 20%, 50%, 80%, 100% {
                transform: translateY(0);
            }

            40% {
                transform: translateY(-20px);
            }

            60% {
                transform: translateY(-10px);
            }
        }

        /* Сообщение */
        .status-message {
            padding: 1rem;
            margin: 1.5rem 0;
            border-radius: 8px;
            font-family: 'Poppins-Regular', sans-serif;
            font-weight: 500;
            font-size: 14px;
            line-height: 1.6;
            background-color: rgba(0, 0, 0, 0.05);
            display: flex;
            align-items: center;
            gap: 0.5rem;
            text-align: center;
            justify-content: center;
        }

            .status-message.success {
                color: var(--success-color);
                border-left: 4px solid var(--success-color);
            }

            .status-message.error {
                color: var(--accent-color);
                border-left: 4px solid var(--accent-color);
            }

        /* Бейдж */
        .security-badge {
            margin-top: 2rem;
            padding: 0.5rem 1rem;
            background: rgba(75, 181, 67, 0.1);
            border-radius: 20px;
            display: inline-flex;
            align-items: center;
            color: var(--success-color);
            font-family: 'Poppins-Regular', sans-serif;
            font-size: 0.8rem;
        }

            .security-badge i {
                margin-right: 0.5rem;
            }

        /* Слоган */
        .slogan {
            font-family: 'Poppins-Regular', sans-serif;
            font-size: 14px;
            color: var(--dark-color);
            text-align: center;
            margin-top: 2rem;
        }

        /* Адаптивность для мобильных */
        @@media (max-width: 576px) {
            .success-icon {
                font-size: 2.5rem;
                margin-bottom: 1rem;
            }

            .login100-form-title {
                font-size: 26px;
            }

            .status-message {
                font-size: 13px;
                padding: 0.8rem;
                margin: 1rem 0;
            }

            .security-badge {
                font-size: 0.75rem;
                padding: 0.4rem 0.8rem;
                margin-top: 1.5rem;
            }

            .slogan {
                font-size: 13px;
                margin-top: 1.5rem;
            }

            .container-login100-form-btn {
                padding-top: 10px;
            }

            .login100-form-btn {
                font-size: 14px;
                height: 45px;
                padding: 0 15px;
            }
        }
    </style>
</head>
<body>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                @if (!Model.StatusMessage.Contains("Error"))
                {
                    <div class="success-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h2 class="login100-form-title">@ScanGuard.Resources.Resources.ConfirmEmail_SuccessTitle</h2>
                    <div class="status-message success">
                        <i class="fas fa-check-circle"></i> @Model.StatusMessage
                    </div>
                    <div class="security-badge">
                        <i class="fas fa-lock"></i> @ScanGuard.Resources.Resources.ConfirmEmail_SecurityBadge
                    </div>
                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <a href="/Identity/Account/Login" class="login100-form-btn">
                                <i class="fas fa-sign-in-alt"></i> @ScanGuard.Resources.Resources.ConfirmEmail_LinkLogin
                            </a>
                        </div>
                    </div>
                }
                else
                {
                    <h2 class="login100-form-title">@ScanGuard.Resources.Resources.ConfirmEmail_ErrorTitle</h2>
                    <div class="status-message error">
                        <i class="fas fa-exclamation-circle"></i> @Model.StatusMessage
                    </div>
                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <a href="/" class="login100-form-btn">
                                <i class="fas fa-home"></i> @ScanGuard.Resources.Resources.ConfirmEmail_LinkHome
                            </a>
                        </div>
                    </div>
                }
                <div class="slogan">@ScanGuard.Resources.Resources.ConfirmEmail_Slogan</div>
            </div>
        </div>
    </div>
</body>
</html>