@page
@model RegisterModel
@{
    ViewData["Title"] = ScanGuard.Resources.Resources.Register_Title;
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ScanGuard.Resources.Resources.Register_PageTitle</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/fonts/iconic/css/material-design-iconic-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/css/main.css">
    <!--===============================================================================================-->
</head>
<body>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <form class="login100-form" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <span class="login100-form-title p-b-26">
                        @ScanGuard.Resources.Resources.Register_FormTitle
                    </span>
                    <span class="login100-form-title p-b-48">
                        <i class="zmdi zmdi-account-add"></i>
                    </span>

                    <div class="wrap-input100">
                        <input asp-for="Input.Email" class="input100" autocomplete="username" aria-required="true" />
                        <span asp-for="Input.Email" class="focus-input100" data-placeholder="@ScanGuard.Resources.Resources.Register_PlaceholderEmail"></span>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>
                    <div class="wrap-input100">
                        <input asp-for="Input.FullName" class="input100" autocomplete="fullname" aria-required="true" />
                        <span asp-for="Input.FullName" class="focus-input100" data-placeholder="@ScanGuard.Resources.Resources.Register_PlaceholderFullName"></span>
                        <span asp-validation-for="Input.FullName" class="text-danger small"></span>
                    </div>
                    <div class="wrap-input100">
                        <span class="btn-show-pass">
                            <i class="zmdi zmdi-eye"></i>
                        </span>
                        <input asp-for="Input.Password" class="input100" type="password" aria-required="true" />
                        <span asp-for="Input.Password" class="focus-input100" data-placeholder="@ScanGuard.Resources.Resources.Register_PlaceholderPassword"></span>
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>
                    <div class="wrap-input100">
                        <span class="btn-show-pass">
                            <i class="zmdi zmdi-eye"></i>
                        </span>
                        <input asp-for="Input.ConfirmPassword" class="input100" type="password" aria-required="true" />
                        <span asp-for="Input.ConfirmPassword" class="focus-input100" data-placeholder="@ScanGuard.Resources.Resources.Register_PlaceholderPassword"></span>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger small" role="alert"></div>
                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button id="registerSubmit" type="submit" class="login100-form-btn">@ScanGuard.Resources.Resources.Register_ButtonSubmit</button>
                        </div>
                    </div>
                    <div class="text-center m-t-15">
                        <span class="txt1">
                            @ScanGuard.Resources.Resources.Register_TextHaveAccount
                        </span>
                        <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">@ScanGuard.Resources.Resources.Register_LinkLogin</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!--===============================================================================================-->
    <script src="~/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/bootstrap/js/popper.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/js/main.js"></script>
</body>
</html>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}