@using ScanGuard.Domain.Entity
@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<!-- Sidebar navigation -->
<aside class="sidebar" id="sidebar">
    <nav class="sidebar-nav">
        <ul class="sidebar-items">
            <li class="sidebar-item">
                <a class="sidebar-link @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">
                    <i class="sidebar-icon fas fa-user"></i> Profile
                </a>
            </li>
            @if (hasExternalLogins)
            {
                <li class="sidebar-item">
                    <a class="sidebar-link @ManageNavPages.ExternalLoginsNavClass(ViewContext)" id="external-login" asp-page="./ExternalLogins">
                        <i class="sidebar-icon fas fa-link"></i> External Logins
                    </a>
                </li>
            }
            <li class="sidebar-item">
                <a class="sidebar-link @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)" id="two-factor" asp-page="./TwoFactorAuthentication">
                    <i class="sidebar-icon fas fa-lock"></i> Two-Factor Auth
                </a>
            </li>
            <li class="sidebar-item">
                <a class="sidebar-link @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">
                    <i class="sidebar-icon fas fa-file-alt"></i> Personal Data
                </a>
            </li>
            <li class="sidebar-item">
                <a class="sidebar-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">
                    <i class="sidebar-icon fas fa-key"></i> Change Password
                </a>
            </li>
        </ul>
    </nav>
</aside>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const sidebar = document.getElementById('sidebar');

        if (!sidebar) {
            console.error('Ошибка: Сайдбар не найден');
            return;
        }

        console.log('Меню инициализировано');

        // Закрытие меню при клике на ссылку (для мобильных)
        document.querySelectorAll('.sidebar-link').forEach(link => {
            link.addEventListener('click', () => {
                if (window.innerWidth <= 768) {
                    console.log('Клик по ссылке');
                    sidebar.classList.remove('active');
                }
            });
        });
    });
</script>

<style>
    .sidebar {
        width: 240px;
        background: #ffffff;
        border-right: 1px solid #e5e7eb;
        position: fixed;
        top: 60px;
        left: 0;
        height: calc(100vh - 60px);
        z-index: 1000;
        font-family: 'Inter', sans-serif;
    }

    .sidebar-nav {
        padding: 2rem 1rem; /* Отступ сверху для десктопа */
    }

    .sidebar-items {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .sidebar-item {
        margin-bottom: 0.5rem;
    }

    .sidebar-link {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 1rem;
        font-size: 0.95rem;
        font-weight: 500;
        color: #374151;
        text-decoration: none;
        border-radius: 6px;
        transition: background 0.2s ease, color 0.2s ease;
    }

        .sidebar-link:hover {
            background: #f3f4f6;
            color: #1f2937;
        }

        .sidebar-link.active {
            background: #3b82f6;
            color: #ffffff;
        }

    .sidebar-icon {
        font-size: 1.2rem;
    }

    @@media (max-width: 768px) {
        .sidebar {
            width: 100%;
            height: auto;
            top: auto;
            bottom: 0;
            left: 0;
            border-right: none;
            border-top: 1px solid #e5e7eb;
            background: #ffffff;
            position: fixed;
            z-index: 1000;
        }

        .sidebar-nav {
            padding: 0.5rem 1rem; /* Меньше отступов для компактности */
        }

        .sidebar-items {
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
        }

        .sidebar-item {
            margin-bottom: 0;
            flex: 1;
            text-align: center;
        }

        .sidebar-link {
            flex-direction: column;
            gap: 0.25rem;
            padding: 0.5rem;
            font-size: 0.85rem;
        }

        .sidebar-icon {
            font-size: 1.1rem;
        }
    }

    @@media (max-width: 414px) {
        .sidebar-link {
            font-size: 0.8rem;
            padding: 0.4rem;
        }

        .sidebar-icon {
            font-size: 1rem;
        }
    }
</style>