@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<!-- Content container -->
<div class="cp-content">
    <section class="cp-form">
        <h2 class="cp-title">Change Password</h2>
        <p class="cp-desc">Set a new secure password.</p>
        <partial name="_StatusMessage" for="StatusMessage" />
        <form id="change-password-form" method="post" class="cp-form-inner">
            <div asp-validation-summary="ModelOnly" class="cp-error" role="alert"></div>
            <div class="cp-field">
                <label asp-for="Input.OldPassword" class="cp-label">Current Password</label>
                <div class="cp-input-wrap">
                    <input asp-for="Input.OldPassword" type="password" class="cp-input" autocomplete="current-password" aria-required="true" placeholder="Current password" id="cpOldPassword" />
                    <button type="button" class="cp-toggle" onclick="cpTogglePassword('cpOldPassword')">👁️</button>
                </div>
                <span asp-validation-for="Input.OldPassword" class="cp-error"></span>
            </div>
            <div class="cp-field">
                <label asp-for="Input.NewPassword" class="cp-label">New Password</label>
                <div class="cp-input-wrap">
                    <input asp-for="Input.NewPassword" type="password" class="cp-input" autocomplete="new-password" aria-required="true" placeholder="New password" id="cpNewPassword" oninput="cpCheckStrength()" />
                    <button type="button" class="cp-toggle" onclick="cpTogglePassword('cpNewPassword')">👁️</button>
                </div>
                <div class="cp-strength">
                    <div class="cp-strength-bar" id="cpStrengthBar"></div>
                    <span class="cp-strength-text" id="cpStrengthText">Weak</span>
                </div>
                <span asp-validation-for="Input.NewPassword" class="cp-error"></span>
            </div>
            <div class="cp-field">
                <label asp-for="Input.ConfirmPassword" class="cp-label">Confirm Password</label>
                <div class="cp-input-wrap">
                    <input asp-for="Input.ConfirmPassword" type="password" class="cp-input" autocomplete="new-password" aria-required="true" placeholder="Confirm password" id="cpConfirmPassword" />
                    <button type="button" class="cp-toggle" onclick="cpTogglePassword('cpConfirmPassword')">👁️</button>
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="cp-error"></span>
            </div>
            <div class="cp-actions">
                <button type="submit" class="cp-submit">Update</button>
                <a href="./Index" class="cp-cancel">Cancel</a>
            </div>
        </form>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function cpTogglePassword(id) {
            const input = document.getElementById(id);
            const toggle = input.nextElementSibling;
            input.type = input.type === "password" ? "text" : "password";
            toggle.textContent = input.type === "password" ? "👁️" : "🙈";
        }

        function cpCheckStrength() {
            const password = document.getElementById("cpNewPassword").value;
            const bar = document.getElementById("cpStrengthBar");
            const text = document.getElementById("cpStrengthText");
            let strength = 0;

            if (password.length >= 8) strength += 40;
            if (/[A-Z]/.test(password)) strength += 20;
            if (/[0-9]/.test(password)) strength += 20;
            if (/[^A-Za-z0-9]/.test(password)) strength += 20;

            bar.style.width = `${Math.min(strength, 100)}%`;
            bar.style.background = strength < 40 ? "#ef4444" : strength < 80 ? "#f59e0b" : "#10b981";
            text.textContent = strength < 40 ? "Weak" : strength < 80 ? "Medium" : "Strong";
            text.style.color = strength < 40 ? "#ef4444" : strength < 80 ? "#f59e0b" : "#10b981";
        }
    </script>
}

<style>
    .cp-content {
        font-family: 'Inter', sans-serif;
        max-width: 480px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .cp-form {
        background: #ffffff;
        border-radius: 10px;
        padding: 2rem;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
        animation: cpFade 0.5s ease-out;
    }

    .cp-title {
        font-size: 1.8rem;
        font-weight: 600;
        color: #111827;
        margin: 0 0 0.5rem;
        text-align: center;
    }

    .cp-desc {
        font-size: 0.9rem;
        color: #6b7280;
        margin: 0 0 1.5rem;
        text-align: center;
    }

    .cp-form-inner {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .cp-field {
        display: flex;
        flex-direction: column;
        gap: 0.4rem;
    }

    .cp-label {
        font-size: 0.9rem;
        font-weight: 500;
        color: #111827;
    }

    .cp-input-wrap {
        position: relative;
    }

    .cp-input {
        width: 100%;
        padding: 0.9rem 2.5rem 0.9rem 1rem;
        font-size: 0.95rem;
        border: 1px solid #d1d5db;
        border-radius: 6px;
        background: #f9fafb;
        transition: border-color 0.2s ease;
    }

        .cp-input:focus {
            outline: none;
            border-color: #3b82f6;
            box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.2);
        }

    .cp-toggle {
        position: absolute;
        right: 0.8rem;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        font-size: 1.2rem;
        color: #6b7280;
        cursor: pointer;
    }

        .cp-toggle:hover {
            color: #3b82f6;
        }

    .cp-strength {
        display: flex;
        gap: 0.75rem;
        margin-top: 0.5rem;
        align-items: center;
    }

    .cp-strength-bar {
        flex: 1;
        height: 5px;
        width: 0;
        border-radius: 2.5px;
        transition: width 0.3s ease, background 0.3s ease;
    }

    .cp-strength-text {
        font-size: 0.85rem;
        font-weight: 500;
    }

    .cp-error {
        font-size: 0.85rem;
        color: #ef4444;
        margin-top: 0.3rem;
    }

    .cp-actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
        margin-top: 1rem;
    }

    .cp-submit {
        background: #3b82f6;
        border: none;
        padding: 0.9rem 1.5rem;
        font-size: 0.95rem;
        font-weight: 500;
        color: #ffffff;
        border-radius: 6px;
        cursor: pointer;
        transition: background 0.2s ease;
    }

        .cp-submit:hover {
            background: #2563eb;
        }

    .cp-cancel {
        padding: 0.9rem 1.5rem;
        font-size: 0.95rem;
        font-weight: 500;
        color: #6b7280;
        background: #f1f5f9;
        border-radius: 6px;
        text-decoration: none;
        transition: background 0.2s ease;
    }

        .cp-cancel:hover {
            background: #e5e7eb;
        }

    @@keyframes cpFade {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@media (max-width: 414px) {
        .cp-form {
            padding: 1.5rem;
        }

        .cp-title {
            font-size: 1.6rem;
        }

        .cp-input {
            padding: 0.8rem 2.3rem 0.8rem 0.9rem;
        }

        .cp-submit, .cp-cancel {
            padding: 0.8rem 1.25rem;
            font-size: 0.9rem;
        }
    }
</style>