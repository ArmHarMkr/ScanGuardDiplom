        align-items: center;
        gap: 0.75rem;
        margin-bottom: 0.75rem;
    }

    .ea-step-icon {
        font-size: 1.4rem;
        color: #3b82f6;
    }

    .ea-step-title {
        font-size: 1.2rem;
        font-weight: 500;
        color: #111827;
        margin: 0;
    }

    .ea-step-desc {
        font-size: 0.9rem;
        color: #6b7280;
        margin: 0 0 1rem;
    }

    .ea-app-links {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .ea-app-link {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 1rem;
        font-size: 0.95rem;
        font-weight: 500;
        color: #374151;
        text-decoration: none;
        border: 1px solid #d1d5db;
        border-radius: 6px;
        transition: border-color 0.2s ease, color 0.2s ease;
    }

        .ea-app-link:hover {
            color: #3b82f6;
            border-color: #3b82f6;
        }

    .ea-app-icon {
        font-size: 1.2rem;
    }

    .ea-qr-container {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 1.25rem; /* Увеличен padding */
        background: #f9fafb;
        border: 1px solid #d1d5db;
        border-radius: 6px;
        margin-bottom: 1rem;
        min-height: 160px; /* Гарантируем место для QR-кода */
        box-sizing: border-box;
    }

    #qrCode {
        max-width: 160px; /* Десктоп */
        max-height: 160px;
    }

        #qrCode canvas, #qrCode img {
