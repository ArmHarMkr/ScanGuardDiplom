        transition: background 0.2s ease;
        cursor: pointer;
        border: none;
    }

    .ea-btn-primary {
        background: #3b82f6;
        color: #ffffff;
        width: 100%;
    }

        .ea-btn-primary:hover {
            background: #2563eb;
        }

    @@keyframes eaFade {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@media (max-width: 414px) {
        .ea-form {
            padding: 1.5rem;
        }

        .ea-title {
            font-size: 1.6rem;
        }

        .ea-step-title {
            font-size: 1.1rem;
        }

        .ea-step-desc {
            font-size: 0.85rem;
        }

        .ea-app-link {
            padding: 0.6rem 0.9rem;
            font-size: 0.9rem;
        }

        .ea-app-icon {
            font-size: 1.1rem;
        }

        .ea-input {
            padding: 0.8rem 0.9rem;
        }

        .ea-btn {
            padding: 0.8rem 1.25rem;
            font-size: 0.9rem;
        }

        .ea-alert {
            font-size: 0.85rem;
            padding: 0.8rem;
        }

        .ea-alert-icon {
            font-size: 1.1rem;
        }

        .ea-qr-container {
            padding: 1rem;
            min-height: 140px; /* Уменьшено для мобильных */
        }

        #qrCode {
            max-width: 140px; /* Увеличено с 120px */
            max-height: 140px;
        }
    }
</style>