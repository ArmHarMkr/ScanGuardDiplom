        font-family: 'Courier New', Courier, monospace;
    }

    .ea-alert {
        display: flex;
        gap: 0.75rem;
        padding: 1rem;
        border-radius: 6px;
        font-size: 0.9rem;
        margin: 1rem 0;
    }

    .ea-alert-info {
        background: #eff6ff;
        color: #1e40af;
        border: 1px solid #3b82f6;
    }

    .ea-alert-icon {
        font-size: 1.2rem;
        flex-shrink: 0;
        margin-top: 0.2rem;
    }

    .ea-link-action {
        color: #3b82f6;
        text-decoration: none;
        font-weight: 500;
    }

        .ea-link-action:hover {
            text-decoration: underline;
            color: #2563eb;
        }

    .ea-form-inner {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .ea-field {
        display: flex;
        flex-direction: column;
        gap: 0.4rem;
    }

    .ea-label {
        font-size: 0.9rem;
        font-weight: 500;
        color: #111827;
    }

    .ea-input {
        width: 100%;
        padding: 0.9rem 1rem;
        font-size: 0.95rem;
        border: 1px solid #d1d5db;
        border-radius: 6px;
        background: #f9fafb;
        transition: border-color 0.2s ease;
    }

        .ea-input:focus {
            outline: none;
            border-color: #3b82f6;
            box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.2);
        }

    .ea-error {
        font-size: 0.85rem;
        color: #ef4444;
        margin-top: 0.3rem;
    }

    .ea-btn {
        padding: 0.9rem 1.5rem;
        font-size: 0.95rem;
        font-weight: 500;
        border-radius: 6px;
        text-decoration: none;
