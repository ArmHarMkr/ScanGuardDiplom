@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - ScanGuard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/authPages.css">
    <link rel="stylesheet" href="~/css/main.css">

    <style>
        /* Иконка */
        .email-icon {
            font-size: 3.5rem;
            color: var(--accent-color);
            margin-bottom: 1.5rem;
            animation: pulse 2s infinite;
            display: block;
            text-align: center;
        }

        /* Анимация пульсации */
        @@keyframes pulse {
            0% {
                transform: scale(1);
                opacity: 1;
            }

            50% {
                transform: scale(1.1);
                opacity: 0.7;
            }

            100% {
                transform: scale(1);
                opacity: 1;
            }
        }

        /* Список шагов */
        .steps {
            margin: 2rem 0;
            text-align: left;
            padding: 0 1rem;
        }

        .step {
            display: flex;
            align-items: center;
            margin-bottom: 1rem;
            color: var(--dark-color);
            font-family: 'Poppins-Regular', sans-serif;
            font-size: 14px;
        }

        .step-number {
            background: var(--accent-color);
            color: white;
            width: 24px;
            height: 24px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 1rem;
            font-size: 0.8rem;
            font-weight: bold;
        }

        /* Слоган */
        .slogan {
            font-family: 'Poppins-Regular', sans-serif;
            font-size: 14px;
            color: var(--dark-color);
            text-align: center;
            margin-top: 2rem;
        }

        /* Адаптивность для мобильных */
        @@media (max-width: 576px) {
            .email-icon {
                font-size: 2.5rem;
                margin-bottom: 1rem;
            }

            .login100-form-title {
                font-size: 26px;
            }

            .login100-form-desc {
                font-size: 13px;
            }

            .steps {
                margin: 1.5rem 0;
                padding: 0 0.5rem;
            }

            .step {
                font-size: 13px;
            }

            .step-number {
                width: 20px;
                height: 20px;
                font-size: 0.7rem;
                margin-right: 0.75rem;
            }

            .slogan {
                font-size: 13px;
                margin-top: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="email-icon">
                    <i class="fas fa-envelope"></i>
                </div>
                <h2 class="login100-form-title">Check Your Email</h2>
                <div class="login100-form-desc">
                    We've sent a confirmation email to <b>@Model.Email.</b> Please check your inbox and click the confirmation link to activate your ScanGuard account.
                </div>

                <div class="steps">
                    <div class="step">
                        <div class="step-number">1</div>
                        <span>Open your email inbox</span>
                    </div>
                    <div class="step">
                        <div class="step-number">2</div>
                        <span>Find our email (check spam folder too)</span>
                    </div>
                    <div class="step">
                        <div class="step-number">3</div>
                        <span>Click the confirmation link</span>
                    </div>
                </div>

                <div class="slogan">Your first line of defense in the digital world</div>
            </div>
        </div>
    </div>
</body>
</html>