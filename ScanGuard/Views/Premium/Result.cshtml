@model FileScanEntity

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="View the results of your file scan with ScanGuard’s security tool.">
    <title>File Scan Result - ScanGuard</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Montserrat:wght@700;800&display=swap" rel="stylesheet">
    <style>
        /* Modal styles */
        .modal-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 10000;
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.3s ease, visibility 0.3s ease;
        }

        .modal-overlay.show {
            opacity: 1;
            visibility: visible;
        }

        .modal-content {
            background: #ffffff;
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            width: 90%;
            max-height: 80vh;
            overflow-y: auto;
            padding: 2rem;
            position: relative;
            transform: translateY(20px);
            transition: transform 0.3s ease;
        }

        .modal-overlay.show .modal-content {
            transform: translateY(0);
        }

        .modal-close-btn {
            position: absolute;
            top: 1rem;
            right: 1rem;
            background: none;
            border: none;
            font-size: 1.5rem;
            color: #6b7280;
            cursor: pointer;
            transition: color 0.3s ease;
        }

        .modal-close-btn:hover {
            color: #1f2937;
        }

        .modal-title {
            font-family: 'Montserrat', sans-serif;
            font-size: 2rem;
            font-weight: 800;
            color: #1f2937;
            margin-bottom: 1.5rem;
            text-align: center;
        }

        .modal-body {
            font-family: 'Inter', sans-serif;
            color: #1f2937;
            font-size: 1rem;
            line-height: 1.6;
        }

        .modal-field {
            margin-bottom: 1rem;
        }

        .modal-label {
            font-weight: 600;
            color: #1f2937;
            display: block;
            margin-bottom: 0.3rem;
        }

        .modal-value {
            color: #6b7280;
            word-break: break-all;
        }

        .modal-badge {
            display: inline-block;
            padding: 0.4rem 0.8rem;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 600;
        }

        .modal-badge-safe {
            background: #d1fae5;
            color: #059669;
        }

        .modal-badge-danger {
            background: #fee2e2;
            color: #dc2626;
        }

        .modal-report {
            background: #f9f9f9;
            padding: 1rem;
            border-radius: 8px;
            border: 1px solid #e5e7eb;
            max-height: 200px;
            overflow-y: auto;
            white-space: pre-wrap;
            font-size: 0.95rem;
            color: #1f2937;
        }

        .modal-footer {
            text-align: center;
            margin-top: 2rem;
        }

        .modal-btn {
            padding: 0.9rem 2rem;
            border-radius: 8px;
            font-size: 1.1rem;
            font-weight: 600;
            background: #ef233c;
            color: #ffffff;
            border: none;
            cursor: pointer;
            transition: background 0.3s ease;
        }

        .modal-btn:hover {
            background: #d90429;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .modal-content {
                width: 95%;
                padding: 1.5rem;
            }

            .modal-title {
                font-size: 1.8rem;
            }

            .modal-body {
                font-size: 0.95rem;
            }

            .modal-btn {
                padding: 0.8rem 1.5rem;
                font-size: 1rem;
            }
        }

        @@media (max-width: 414px) {
            .modal-content {
                padding: 1rem;
            }

            .modal-title {
                font-size: 1.6rem;
            }

            .modal-body {
                font-size: 0.9rem;
            }

            .modal-btn {
                padding: 0.7rem 1.2rem;
                font-size: 0.95rem;
            }
        }
    </style>
</head>
<body>
    @if (Model != null)
    {
        <div class="modal-overlay show" id="scanResultModal">
            <div class="modal-content">
                <button class="modal-close-btn" onclick="closeModal()">&times;</button>
                <h2 class="modal-title">File Scan Result</h2>
                <div class="modal-body">
                    <div class="modal-field">
                        <span class="modal-label">File Name:</span>
                        <span class="modal-value">@Model.FileName</span>
                    </div>
                    <div class="modal-field">
                        <span class="modal-label">Scan Date:</span>
                        <span class="modal-value">@Model.ScanDate.ToString("yyyy-MM-dd HH:mm")</span>
                    </div>
                    <div class="modal-field">
                        <span class="modal-label">File Hash:</span>
                        <span class="modal-value">@Model.FileHash</span>
                    </div>
                    <div class="modal-field">
                        <span class="modal-label">Potential Threat:</span>
                        <span class="modal-value">@(string.IsNullOrEmpty(Model.VulnerabilityType.ToString()) ? "None" : Model.VulnerabilityType)</span>
                    </div>
                    <div class="modal-field">
                        <span class="modal-label">Is Malicious:</span>
                        @{
                            var badgeClass = Model.IsMalicious ? "danger" : "safe";
                        }
                        <span class="modal-badge modal-badge-@badgeClass">@(Model.IsMalicious ? "Yes" : "No")</span>
                    </div>
                    <div class="modal-field">
                        <span class="modal-label">VirusTotal Report:</span>
                        <pre class="modal-report">@Model.VirusTotalReport</pre>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="modal-btn" onclick="closeModal()">Close</button>
                </div>
            </div>
        </div>
    }

    <script>
        function closeModal() {
            const modal = document.getElementById('scanResultModal');
            modal.classList.remove('show');
            setTimeout(() => {
                window.location.href = '/FileScan';
            }, 300);
        }

        // Auto-show modal on page load if data exists
        document.addEventListener('DOMContentLoaded', function () {
            const modal = document.getElementById('scanResultModal');
            if (modal) {
                modal.classList.add('show');
            }
        });
    </script>
</body>
</html>
