@model CorporationEntity

<h2>@Model.CorpName</h2>
<p><strong>Website:</strong> @Model.Website</p>
<p><strong>Email:</strong> @Model.Email</p>
<p><strong>Phone:</strong> @Model.Phone</p>
<p><strong>Address:</strong> @Model.Address</p>
<p><strong>City:</strong> @Model.City</p>
<p><strong>Country:</strong> @Model.Country</p>
<p><strong>Worker Count:</strong> @Model.WorkerCount</p>

<form asp-action="ApproveCorporation" asp-route-corpId="@Model.Id" method="post">
    <input type="hidden" name="corporationId" value="@Model.Id" />
    <button type="submit">Approve</button>
</form>

<form asp-action="DisapproveCorporation" asp-route-corpId="@Model.Id" method="post">
    <input type="hidden" name="corporationId" value="@Model.Id" />
    <button type="submit">Disapprove</button>
</form>
